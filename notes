apt install golang zsh tmux git build-essential zlib1g-dev libssl-dev liblzma-dev fd-find ripgrep
snap install nvim

// oh my zsh install script
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

// tmux tpm install script
git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm

go install github.com/asdf-vm/asdf/cmd/asdf@latest

asdf plugin add lua
asdf install lua latest
asdf set -u lua latest

asdf plugin add python
asdf install python latest
asdf set -u python latest

asdf plugin add nodejs
asdf install nodejs latest
asdf set -u nodejs latest
