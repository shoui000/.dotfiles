export XDG_CONFIG_HOME=$HOME/.config

export PROJETOS=$HOME/Projetos
export ADVENT=$PROJETOS/advent-of-code
export DOTFILES=$HOME/.dotfiles
export TREESHITTER=$PROJETOS/treeshitter
export EDITOR=nvim
export VISUAL=nvim

# ALIASES
alias cls=clear
alias python=python3
alias vim=nvim

hh() {
    cd ~
    clear
}

dot() {
    cd $DOTFILES
}

# PATH
path+=("$HOME/.local/bin")
path+=("/snap/bin")
export PATH
