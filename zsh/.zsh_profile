export XDG_CONFIG_HOME=$HOME/.config

export ADVENT=$HOME/Projetos/advent-of-code
export DOTFILES=$HOME/.dotfiles

# ALIASES
alias cls=clear
alias python=python3
alias vim=nvim

# KEYBINDINGS
bindkey -s ^f "advent -a\n"
bindkey -s ^h "tmux-sessionizer\n"

# PATH
path+=("$HOME/.local/bin")
path+=("/snap/bin")
export PATH
